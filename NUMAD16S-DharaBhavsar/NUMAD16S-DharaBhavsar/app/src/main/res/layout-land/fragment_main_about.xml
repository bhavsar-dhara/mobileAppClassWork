<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alignmentMode="alignMargins"
    android:columnCount="2"
    android:paddingLeft="35dp"
    android:rowCount="8"
    android:showDividers="none"
    android:weightSum="1"
    tools:context="edu.neu.madcourse.dharabhavsar.ui.about.MainActivityAbout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_weight="0.11"
        android:width="250dp" />

    <!--<View android:id="@+id/primerdivisor_5" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_weight="0.11"
        android:width="250dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="229dp"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="1"
        android:layout_rowSpan="6"
        android:layout_weight="0.85"
        android:scaleType="centerCrop" />

    <!--<View android:id="@+id/primerdivisor_1" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/about_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:layout_column="1"
        android:layout_gravity="top|center"
        android:layout_row="2"
        android:width="320dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/about_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:layout_column="1"
        android:layout_gravity="top|center"
        android:layout_row="3"
        android:width="320dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--<View android:id="@+id/primerdivisor_2" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <!--<View android:id="@+id/primerdivisor_3" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/about_school_year"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:layout_column="1"
        android:layout_gravity="top|center"
        android:layout_row="4"
        android:width="320dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/about_degree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_gravity="top|center"
        android:layout_row="5"
        android:layout_weight="0.08"
        android:width="320dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--<View android:id="@+id/primerdivisor_4" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/about_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="top|center"
        android:layout_row="6"
        android:width="320dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:width="320dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!--<View android:id="@+id/primerdivisor_6" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

</GridLayout>